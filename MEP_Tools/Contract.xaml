        <Image Width = "24" Height = "24" Margin="190,280,50,0" VerticalAlignment="Top" HorizontalAlignment="Left" Source="YT.png"/>
        <GroupBox Width = "270" Height = "320" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,50,0" BorderBrush="Black" />
    </Grid>
</Window>
